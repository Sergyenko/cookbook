<h1>New category</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :style => "width: 300px;" %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :style => "width: 500px; height: 200px;" %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<div id="controllinks">
  <%= link_to 'Back', categories_path %>
</div>